# frontend/.env

# Backend API Configuration
VUE_APP_API_BASE_URL=https://pi-store-api.example.com
# WebSocket Configuration for Pi Network
VUE_APP_WS_URL=wss://api.mainnet.minepi.com/ws

# Exchange List for External Rate (used by rate-service)
EXCHANGE_LIST=okx,bitget,pionex,mexc,gateio

# OKX API Credentials
OKX_API_KEY=your_okx_key
OKX_API_SECRET=your_okx_secret

# Bitget API Credentials
BITGET_API_KEY=your_bitget_key
BITGET_API_SECRET=your_bitget_secret

# Pionex API Credentials
PIONEX_API_KEY=your_pionex_key
PIONEX_API_SECRET=your_pionex_secret

# MEXC API Credentials
MEXC_API_KEY=your_mexc_key
MEXC_API_SECRET=your_mexc_secret

# Gate.io API Credentials
GATEIO_API_KEY=your_gateio_key
GATEIO_API_SECRET=your_gateio_secret

# Pi Network Configuration
PI_NODE_URL=https://api.mainnet.minepi.com
PI_CONTRACT_ADDRESS=0xYourPiStoreContractAddress

# Alchemy API Key (for Chainlink Oracle or Ethereum fallback)
ALCHEMY_API_KEY=your_alchemy_key
